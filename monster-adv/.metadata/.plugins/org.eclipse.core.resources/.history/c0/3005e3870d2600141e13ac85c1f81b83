	<script type="text/javascript">
	window.onload = function(){
		var variable = "<%=request.getAttribute("message") %>"
		if(variable=="infoincorrect")
		{
			alert("아이디 혹은 비밀번호가 올바르지 않습니다.");
			window.location.assign("main");		
		}
		
	};
	</script>
